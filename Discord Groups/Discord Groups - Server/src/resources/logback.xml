<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">

		<filter class="com.weeryan17.dgs.listeners.LogListener" />
		<encoder>
			<pattern>
				%-4relative [%thread] %-5level %logger - %msg%n
			</pattern>
		</encoder>
	</appender>
	<root level="trace">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>